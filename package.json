{
  "name": "pos-app",
  "version": "1.0.0",
  "description": "Point of Sale Application with Vue.js and Cloudflare Pages",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "wrangler pages dev --proxy 5173 --port 8788",
    "dev:remote": "wrangler pages dev --proxy 5173 --port 8788 --remote",
    "build": "vite build",
    "preview": "vite preview",
    "pages:deploy": "vite build && wrangler pages deploy dist"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "lucide-vue-next": "^0.555.0",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.6",
    "wrangler": "^4.51.0"
  }
}
